<Page
    x:Class="Vavatech.Shop.WPFClient.Views.RoutedEventView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Vavatech.Shop.WPFClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RoutedEventView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ButtonBase.Click="Page_Click"
    mc:Ignorable="d">

    <Grid>

        <UniformGrid ButtonBase.Click="UniformGrid_Click" Columns="3">
            <Button Click="Button_Click">1</Button>
            <Button Content="2">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click" />
                </i:Interaction.Triggers>

            </Button>
            <Button>3</Button>
            <Button>4</Button>
            <Button>5</Button>
            <Button>6</Button>
            <Button>7</Button>
            <Button>8</Button>
            <Button>
                <Grid>
                    <CheckBox />
                </Grid>
            </Button>



        </UniformGrid>

    </Grid>
</Page>
